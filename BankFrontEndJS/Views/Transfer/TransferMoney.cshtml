@model List<string>

<div id="TransferMoneyView">
    <h2>Transfer Money</h2>

        <div class="form-group">
            <label for="FromAccount">From Account:</label>
            <select id="FromAccount" name="FromAccount">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <option value="@Model[i]">Account @Model[i]</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="ToAccount">To Account:</label>
            <input type="text" id="ToAccount" name="ToAccount" placeholder="Recipient's account number" required>
        </div>

        <div class="form-group">
            <label for="Amount">Amount:</label>
            <input type="number" id="Amount" name="Amount" step="0.01" placeholder="0.00" required>
        </div>

        <div class="form-group">
            <label for="Remarks">Description (optional):</label>
            <textarea id="Remarks" name="Remarks" rows="2"></textarea>
        </div>

        <div class="form-actions">
            <button type="submit" id="SubmitTransfer" onclick="submitTransfer()">Transfer Money</button>
        </div>
</div>
